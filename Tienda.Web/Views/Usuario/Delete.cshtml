@model Tienda.LogicaAplicacion.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Quieres eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClaveSinEncriptar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClaveSinEncriptar)
        </dd>
    </dl>


    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input asp-for="Nombre" class="form-control" type="hidden" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">            
            <input asp-for="Apellido" class="form-control" type="hidden" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <!-- Para evitar que Email llegue nulo a controlador -->
        <div>
            <input type="hidden" asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="Clave" class="form-control" type="hidden" />
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>        
        <div>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="ListarUsuarios" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>

@ViewBag.Message
