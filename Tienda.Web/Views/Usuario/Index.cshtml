@model IEnumerable<Tienda.LogicaNegocio.Entidades.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Bienvenido</h1>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
@if (Context.Session.GetString("token") == null)
{
            <a asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
}
else
{
                <a asp-action="ListarUsuarios" class="btn btn-primary">Gestionar usuarios</a>
}
            @ViewBag.Mensaje
        </div>
    </div>
</div>

