@model IEnumerable<Tienda.LogicaNegocio.Entidades.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Context.Session.GetString("token") == null)
{
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <a asp-action="Create" class="btn btn-primary">Registrarse</a>
                <a asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
            </div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaveSinEncriptar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clave)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaveSinEncriptar)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        }
    </tbody>
</table>
